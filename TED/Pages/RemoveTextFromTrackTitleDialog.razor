
<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="@TextToRemove" T="string" Label="Text"></MudTextField>
        <MudTextField @bind-Value="@TextToReplaceWith" T="string" Label="Replace With Text"></MudTextField>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] 
    MudDialogInstance MudDialog { get; set; }

    [Parameter] 
    public string TextToRemove { get; set; }

    [Parameter]
    public string TextToReplaceWith { get; set; } = string.Empty;

    void Submit() => MudDialog.Close(DialogResult.Ok<string[]>(new string[] { TextToRemove, TextToReplaceWith }));
    void Cancel() => MudDialog.Cancel();
}

